<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/background_item"
        android:gravity="center_horizontal"
        android:paddingStart="30dp"
        android:paddingEnd="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="120dp"
        android:layout_height="160dp"
        tools:backgroundTint="@android:color/darker_gray"
        app:cardCornerRadius="15dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/img_item_photo"
            android:scaleType="fitXY"/>

    </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_item_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/TextItemTop"
            android:textAlignment="center"
            tools:text="Nama Produk"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tv_item_kategori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:textAlignment="center"
            style="@style/TextItemDetail"
            tools:text="Kategori Produk" />

        <TextView
            android:id="@+id/tv_item_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            style="@style/TextItemDetail"
            android:maxLines="3"
            android:justificationMode="inter_word"
            tools:text="Harga Produk"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</RelativeLayout>